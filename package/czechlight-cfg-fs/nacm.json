{
    "ietf-netconf-acm:nacm": {
        "rule-list": [
            {
                "name": "optics access",
                "group": ["optics"],
                "rule": [
                    {
                        "name": "Allow czechlight-roadm-device for optics",
                        "module": "czechlight-roadm-device",
                        "action": "permit"
                    },
                    {
                        "name": "Allow czechlight-inline-amp for optics",
                        "module": "czechlight-inline-amp",
                        "action": "permit"
                    },
                    {
                        "name": "Allow czechlight-coherent-add-drop for optics",
                        "module": "czechlight-coherent-add-drop",
                        "action": "permit"
                    },
                    {
                        "name": "Allow czechlight-calibration-device for optics",
                        "module": "czechlight-calibration-device",
                        "action": "permit"
                    }
                ]
            }
        ]
    }
}
