[Unit]
Description=Install YANG and initial data for __MODEL__
ConditionKernelCommandLine=czechlight=__MODEL__
ConditionPathExistsGlob=!/etc/sysrepo/yang/__YANG__@*.yang
Before=netopeer2-server.service

[Service]
Type=oneshot
ExecStart=/usr/bin/sysrepoctl --install /usr/share/cla-sysrepo/yang/__YANG__.yang
__FEATURE__
ExecStart=/usr/bin/sysrepocfg --datastore startup --module __YANG__ --new-data /usr/share/cla-sysrepo/yang/__MODEL__.json
ExecStart=/bin/cp -a /etc/sysrepo /cfg/etc/

[Install]
WantedBy=multi-user.target
